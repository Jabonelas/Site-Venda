    <div>
        <input type="file" class="form-control-file" name="pd_imagem" required/>
        @*<input type="file" asp-for="pd_imagem" class="form-control-file" name="ImageFile" required="" />*@
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="pd_disponivel"/> Disponível
        </label>
    </div>




    <br/>
    <div class="form-group">
        <input type="submit" value="Cadastar" class="btn btn-primary"/>
    </div>

</form>


