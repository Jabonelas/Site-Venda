<form asp-action="Cadastrar">
    
    

    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pd_tipo" class="control-label">Tipo Produto</label>
                <select asp-for="pd_tipo" class="form-control" asp-items="ViewBag.ed_tipo">

                    <option selected value="">Escolha uma Opção...</option>
                    <option>Pizza</option>
                    <option>Bebida</option>

                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">

            <div class="form-group">
                <label asp-for="pd_nome" class="control-label">Nome</label>
                <input asp-for="pd_nome" class="form-control"/>
                <span asp-validation-for="pd_nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-8">

            <div class="form-group">
                <label asp-for="pd_descricao" class="control-label">Descrição</label>
                <input asp-for="pd_descricao" class="form-control"/>
                <span asp-validation-for="pd_descricao" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="pd_tamanho" class="control-label">Tamanho</label>
                <input asp-for="pd_tamanho" class="form-control"/>
                <span asp-validation-for="pd_tamanho" class="text-danger"></span>
            </div>
        </div>


        <div class="col-4">
            <div class="form-group">
                <label asp-for="pd_preco" class="control-label">Preço</label>
                <input asp-for="pd_preco" class="form-control"/>
                <span asp-validation-for="pd_preco" class="text-danger"></span>
            </div>
        </div>



    </div>

    @*    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="pd_imagem" class="control-label">Imagem</label>
                <input asp-for="pd_imagem" class="form-control" />
                <span asp-validation-for="pd_imagem" class="text-danger"></span>
            </div>
        </div>
        
        
     
        

    </div>*@

