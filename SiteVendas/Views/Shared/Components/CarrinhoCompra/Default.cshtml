                    <div class=" d-flex justify-content-center">
                        <h4>
                            Meu Carrinho
                            <img src="~/images/shopping_cart_30px.png">
                        </h4>
                    </div>
                    <br>
                    <div class="card">
                        <div class="card-body row">
                            <table class="table text-center" id="myTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Nº Pedido
                                        </th>
                                        <th>
                                            Qtd.
                                        </th>
                                        <th>
                                            Valor Unt.
                                        </th>
                                        <th>
                                            Valor Total
                                        </th>
                                        <th>
                                            Nome
