@using SiteVendas.Models.ViewModel
@*@model SiteVendas.ViewComponents.CarrinhoCompraViewComponent*@

@{
    var quantiadeProduto = ViewData["quantidadePedidos"] as List<CarrinhoViewModel>;
}

@*@if (System.Convert.ToInt32(quantiadeProduto) > 0)*@


@if (quantiadeProduto != null)
{


    @if (quantiadeProduto.Count() > 0)
    {
        @* <span><img src="images/shopping_cart_30px.png" /></span>

    <span style="color: black"> @quantiadeProduto </span>*@

        <a type="button" data-toggle="modal"
   data-target="#ModalCarrinho"
   class="button button-xs button-secondary button-winona" href="#">
            <span style="color: black"> @quantiadeProduto.Count() </span>
            <span><img src="images/shopping_cart_30px.png" /></span>
        </a>

        <!-- Modal Adicionar Carrinho -->
        <div class="modal" id="ModalCarrinho" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                @*<div class="modal-dialog modal-dialog-centered" role="document">*@
                <div class="modal-content">

                    <div class=" d-flex justify-content-center">

                        <h4>Meu Carrinho <img src="images/shopping_cart_30px.png" /> </h4>

                    </div>

                    <br />

                    <table class="table text-center" id="myTable">

                        <thead>
                            <tr>
                                <th>
                                    Nº Pedido
                                </th>
                                <th>
                                    Qtd.
                                </th>
                                <th>
                                    Valor Unt.
                                </th>
                                <th>
                                    Valor Total
                                </th>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Tamanho
                                </th>
                                <th>
                                    Imagem
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in quantiadeProduto)
                            {
                                <tr>
                                    <td>
                                        @item.numeroPedido
                                    </td>
                                    <td>
                                        @item.quantidade
                                    </td>
                                    <td>
                                        @item.valorUnitario.ToString("C2")
                                    </td>
                                    <td>
                                        @item.valorTotal.ToString("C2")
                                    </td>
                                    <td>
                                        @item.nome
                                    </td>
                                    <td>
                                        @item.tamanho
                                    </td>
                                    <td>
                                        <img alt="" width="100" height="100"
                                 src="data:image/png;base64,@Convert.ToBase64String(@item.imagem)" />
                                    </td>

                                    <td>
                                        @*<a asp-action="" asp-route-id="">Edit</a> |*@
                                        @*<a asp-action="" asp-route-id="">Details</a> |*@
                                        @*<a asp-action="" asp-route-id="">Delete</a>*@

                                        <a>
                                            @*type="button" data-toggle="modal"*@

                                            @*class="button button-xs button-secondary button-winona" href="#">*@
                                            @*<span style="color: black"> @quantiadeProduto </span>*@
                                            <span><img src="images/trash_30px.png" /></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class=" d-flex justify-content-end">

                        <a class="btn " style=" border: 2px solid  rgb(96, 70, 182);" asp-controller="Cardapio" asp-action="ListaProdutos">Continuar Comprando</a>

                        <a style="margin: 0 15px;" class="btn btn-primary d-flex justify-content-end" asp-area="" asp-controller="Login" asp-action="Login">Finalizar Pedido</a>

                    </div>

                    <br />

                </div>
            </div>
        </div>

        @*}*@

    }
}

@section Scripts {


    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json" }
            });
        });
    </script>
}