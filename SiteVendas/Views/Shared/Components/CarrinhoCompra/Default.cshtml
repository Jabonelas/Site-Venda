                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4">
                                            <h6>
                                                <b>Total:</b>
                                            </h6>
                                        </td>
                                        <td>
                                            <h6>
                                                <b>@somarValoresCarrinho.ToString("C2")</b>
                                            </h6>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <br>
                    <div class=" d-flex justify-content-end">

                        <button class="btn btn-Secundario" data-dismiss="modal">Voltar</button>

                        <button style="margin: 0 15px;" class="btn btn-primary" onclick="FinalizarPedido()">Finalizar Pedido</button>

                    </div>
                    <br>
                </div>
            </div>
        </div>

    }
}

@section Scripts {

    @*Layout da GridView*@
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json" }
            });
        });
    </script>


